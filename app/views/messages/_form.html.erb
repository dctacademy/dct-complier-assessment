<% message = Message.new %>
<%= form_for([@chat_room, message], remote: true) do |f| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_area :body,placeholder: "Enter your message here...",class: "form-control" %>
  </div>

<% end %>

<script>
  $('#new_message').on('keypress', function(e){
    if(e && e.keyCode === 13){
      $(this).submit();
      e.preventDefault();
      $('#new_message')[0].reset();
      $('#new_message').focus();
    }
  });
</script>


