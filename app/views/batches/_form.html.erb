<%= form_for(batch) do |f| %>
  <% if batch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(batch.errors.count, "error") %> prohibited this batch from being saved:</h2>

      <ul>
      <% batch.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.date_select :start_date %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.date_select :end_date %>
  </div>

  <div class="form-group">
    <%= f.label :select_course %>
    <%= f.collection_select :course_id, Course.all, :id, :name, {prompt: "Select Course"}, {class: "chosen-select form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :select_students %>
    <%= f.collection_select :student_ids, Student.all, :id, :name, {prompt: "Select Course"}, {class: "chosen-select form-control", multiple: true} %>
  </div>

  <div class="form-group">
    <%= f.label :is_completed %>
    <%= f.check_box :is_completed %>
  </div>

  <div class="actions">
    <%= f.submit "submit", class: "btn btn-primary" %>
  </div>
<% end %>
