<%= form_for(assignment) do |f| %>
  <% if assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title , class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url ,class: "form-control" %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id ,value: current_user.try(:id) %>
  </div>

  <div class="field">
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list , :data => {:role => "tagsinput"} ,id: "tags"%>
  </div>


  <div class="field">
    <%= f.label :company_list %>
    <%= f.text_field :company_list , :data => {:role => "tagsinput"} ,id: "companies" %>
  </div>

  <div class="field">
    <%= f.label :source %>
    <%= f.text_field :source ,class: "form-control" %>
  </div>

  <% if controller.action_name == "edit" %> 
    <%= f.label :approved %>
    <%= f.check_box :approved  %>
  <% end %>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary btn-margin" %>
  </div>
<% end %>

<script type="text/javascript">
  CKEDITOR.replace('assignment_body');
</script>
