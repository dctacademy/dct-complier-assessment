<div class="row">
  <div class="col-md-9 col-sm-9 col-xs-9 col-lg-9">

    <div class="row main-headline">
      <div class="col-md-6 col-sm-6 col-xs-6 col-lg-6">
          <h2 class="page-heading">List Courses</h2>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-6 col-lg-6">
        <% if can? :create, Course.new %>
          <%= link_to 'New Course', new_course_path, class: "btn btn-primary pull-right" %>
        <% end %>
      </div>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= link_to 'Show', course , class: "btn btn-success"%></td>
            <% if can? :update, course %>
              <td><%= link_to 'Edit', edit_course_path(course), class: "btn btn-info" %></td>
            <% end %>
            <% if can? :destroy, course %>
              <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
